{
  "build": {
    "distDir": [
      "./index.html",
      "./new_window.html"
    ],
    "devPath": [
      "./index.html",
      "./new_window.html"
    ],
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "identifier": "dev.crabnebula.drag",
      "icon": [
        "../icon.png",
        "../icon.ico"
      ]
    },
    "windows": [
      {
        "title": "Drag",
        "width": 400,
        "height": 300,
        "fileDropEnabled": true
      }
    ],
    "allowlist": {
      "path": {
        "all": true
      },
      "window": {
        "create": true,
        "close": true
      }
    }
  }
}