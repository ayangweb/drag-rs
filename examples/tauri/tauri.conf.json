{
  "build": {
    "distDir": ["./index.html", "./html2canvas.min.js"],
    "devPath": ["./index.html", "./html2canvas.min.js"],
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "identifier": "dev.crabnebula.drag",
      "icon": [
        "../icon.png",
        "../icon.ico"
      ],
      "resources": ["../icon.png"]
    },
    "windows": [
      {
        "title": "Drag",
        "width": 400,
        "height": 200
      }
    ],
    "allowlist": {
      "path": {
        "all": true
      },
      "window": {
        "create": true
      }
    }
  }
}
